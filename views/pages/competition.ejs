<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Pok√©mon</title>

        <!-- favicon -->
        <link rel="shortcut icon" href="https://www.pngkey.com/png/detail/317-3178288_pokemon-go-icon-png.png"
            type="image/x-icon">

        <!-- font awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
            integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
            crossorigin="anonymous" />

        <!-- google font -->
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Yanone+Kaffeesatz:wght@400;500;700&display=swap"
            rel="stylesheet">

        <!-- style -->
        <link rel="stylesheet" href="/css/competition/competition.css">

    </head>

    <body>
        <header>
            <div>
                <img class="menu navBarsClose" onclick="pop()" src="/images/closeBall.png" alt="Pokemon Ball">
                <img class="menu navBarsOpen hide" onclick="pop()" src="/images/openBall.png" alt="Pokemon Ball">
                <div class="menuItems">
                    <div class="item1" id="item1">
                        <center>
                            <a href="/home/<%=user.user_id  %> " title="home">
                                <i class="fas fa-home"></i>
                            </a>
                        </center>
                    </div>
                    <div class="item2" id="item2">
                        <center>
                            <a href="/dashboard/<%=user.user_id  %>" title="dashboard">
                                <i class="fas fa-id-card"></i>
                            </a>
                        </center>
                    </div>
                    <div class="item3" id="item3">
                        <center>
                            <a href="/aboutUs/<%=user.user_id  %>" title="about Us">
                                <i class="fas fa-info"></i>
                            </a>
                        </center>
                    </div>
                    <div class="item4" id="item4">
                        <center>
                            <a href="/login" title="logout">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </center>
                    </div>
                </div>
            </div>
        </header>
        <main>
            <aside class="points">
                <div class="user1">
                    <h2 class="computerPoints">1000 points</h2>
                    <h2 class="userName"><i class="fas fa-robot"></i> Computer</h2>
                </div>
                <div class="user2">
                    <h2 class="userName">
                        <i class="fas fa-user"></i>
                        <%=user.username%>
                    </h2>
                    <h2 class="userPoints">1000 points</h2>
                </div>
            </aside>
            <div class="main">
                <section class="computer">
                    <div class="computerCards">
                        <% for (let index=0; index < 20; index++) { %>
                            <div class="computerCard">
                                <img src="<%=computerCards[index].image %>" alt="card" class="cardimg">
                                <p>
                                    <%=computerCards[index].hp %> HP
                                </p>
                            </div>
                            <% } %>
                    </div>
                </section>
                <section class="ring">
                    <form action="/competition/<%=user.user_id  %>" method="POST" class="winLose">
                        <input type="hidden" name="addCard" value="" class="winOrLose">
                        <h2 class="winLoseTitle"></h2>
                        <img src="" alt="" class="winLoseImg">
                        <input type="submit" value="Go to your dashboard" class="winLoseBtn">
                    </form>
                </section>
                <section class="user">
                    <div class="cards">
                        <% for (let index=0; index < 20; index++) { %>
                            <div class="card">
                                <p>
                                    <%=userCards[index].hp %> HP
                                </p>
                                <img src=" <%=userCards[index].image %>" alt="card" class="cardimg">
                            </div>
                            <% } %>
                    </div>
                </section>
            </div>
            <aside class="points2">
                <div class="hover">
                    <img src="" alt="card" class="imgHover hide">
                </div>
            </aside>

        </main>


        <!-- jQuery -->
        <script src=" https://code.jquery.com/jquery-3.5.1.js"></script>

        <!-- js -->
        <script src="/js/competition.js"></script>
    </body>

</html>
